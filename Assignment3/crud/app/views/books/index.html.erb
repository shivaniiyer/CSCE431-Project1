<h1>Books data</h1>

<div>
  <h2>Books</h2>

  <%= link_to("Add New Book", new_book_path, :class => 'action new')%>

  <table class="listing" summary="Book listings">
    <tr class="header">
      <th>#</th>
      <th>Title</th>
      <th>Author</th>
      <th>Genre</th>
      <th>Price</th>
      <th>Published Date</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.id %></td>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.genre %></td>
      <td><%= book.price %></td>
      <td><%= book.published_dates %></td>
      <td>
        <%= link_to("Details", book_path(book), :class => 'action show details of book') %>
        <%= link_to("Update", edit_book_path(book), :class => 'action edit book table') %>
        <%= link_to("Delete", delete_book_path(book), :class => 'action delete book table') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
