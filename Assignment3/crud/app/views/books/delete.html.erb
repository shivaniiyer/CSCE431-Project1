<%= link_to("<< Back to Table", books_path, :class => 'back-link') %>

<div>
  <h2>Delete Book</h2>

  <%= form_for(@book, :method => 'delete') do |b| %>

    <p>Do you want to delete this book</p>
    <p><%= @book.title %></p>
    <div class="form-buttons">
      <%= b.submit("Delete Book") %>
    </div>

  <% end %>
</div>